@model Kullanici
@{
    ViewBag.Title = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card_border py-2 mb-4">
    <div class="cards__heading ">
        <h3>Kullanici Güncelle <span></span></h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("KullaniciGuncelle", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Ad</label>
                <input type="text" class="form-control input-style" name="Ad" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Ad">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Soyad</label>
                <input type="text" class="form-control input-style" name="Soyad" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Soyad">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Kullanıcı Adı</label>
                <input type="text" class="form-control input-style" name="KullaniciAdi" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.KullaniciAdi">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Eposta</label>
                <input type="text" class="form-control input-style" name="Eposta" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Eposta">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Şifre</label>
                <input type="password" class="form-control input-style" name="Sifre" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Sifre">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1" class="input__label">Şifre Tekrar</label>
                <input type="password" class="form-control input-style" name="" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Sifre">
                <small id="emailHelp" class="form-text text-muted">
                </small>
            </div>
            <hr />
            <div class="form-group">
                <label for="exampleInputFile" class="input__label">Kullanıcı Resmini Seç </label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-control" name="ResimID" id="exampleInputFile" value="@Model.ResimID" />
                        <label class="" for="exampleInputFile"></label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-style mt-4">Kaydet</button>

        }
    </div>
</div>

