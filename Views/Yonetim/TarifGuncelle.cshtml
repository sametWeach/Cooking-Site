@model Tarif
@{
    ViewBag.Title = "TarifGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary col-md-12">
    <div class="cards__heading ">
        <h3>Tarif Güncelle <span></span></h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @using (Html.BeginForm("TarifGuncelle", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">

            <!-- Başlık Kısmı -->
            <div class="form-group">
                <label>Tarifin Başlığını Giriniz</label>
                <input type="text" name="Baslik" class="form-control" value="@Model.Baslik">
            </div>
            <div class="form-group">
                <label>Tarif Hakkında Açıklama</label>
                <input type="text" name="Aciklama" class="form-control" value="@Model.Aciklama">
            </div>

            <div class="form-group">
                <label>Kategori</label>
                <select class="form-control" name="KategoriID">
                    <option value="@Model.KategoriID">~@Model.Kategori.KategoriAd~</option>
                    @foreach (var kategori in ViewBag.Kategori)
                    {
                        <option value="@kategori.KategoriID">@kategori.KategoriAd</option>

                    }

                </select>
            </div>

            <div class="form-group">
                <label>Etiket</label>
                <select class="form-control" name="EtiketID">
                    <option value="@Model.EtiketID">~@Model.Etiket.Ad~</option>
                    @foreach (var etiket in ViewBag.Etiket)
                    {
                        <option value="@etiket.EtiketID ">@etiket.Ad</option>

                    }

                </select>
            </div>

            <div class="form-group">
                <label>Malzeme Listesi</label>
                <textarea class="form-control" id="summernote" name="Malzemeler" rows="10" value="">@Model.Malzemeler</textarea>
            </div>

            <div class="form-group">
                <label>Tarifin Yapilisi</label>
                <textarea class="form-control " id="summernote2" name="Yapilis" rows="15" value="">@Model.Yapilis</textarea>
            </div>

            <div class="form-group">
                <label>Hazırlanma Süresi</label>
                <input type="number" name="Hazirlanma" class="form-control" value="@Model.Hazirlanma">
            </div>

            <div class="form-group">
                <label>Pişirme Süresi</label>
                <input type="number" name="Pisirme" class="form-control" value="@Model.Pisirme">
            </div>

            <div class="form-group">
                <label>Kaç Kişilik?</label>
                <input type="number" name="KacKisi" class="form-control" value="@Model.KacKisi">
            </div>






            <!-- Resim ekleme Kısmı -->
            <div class="form-group">
                <label for="exampleInputFile">Resminizi Seçiniz </label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-control" name="Resim" id="exampleInputFile" value="@Model.KapakResimID" />
                        <label class="" for="exampleInputFile"></label>
                    </div>
                </div>
            </div>



        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>

    }


    @*<form role="form">
        </form>*@
</div>




