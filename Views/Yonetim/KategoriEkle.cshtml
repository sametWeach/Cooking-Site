
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="card card_border py-2 mb-4">
        <div class="cards__heading ">
            <h3>Kategori Ekle <span></span></h3>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("KategoriEkle", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label for="exampleInputEmail1" class="input__label">Kategori Adı</label>
                    <input type="text" class="form-control input-style" name="KategoriAd" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Kategori Adı...">
                    <small id="emailHelp" class="form-text text-muted">
                    </small>
                </div>
                <hr />
                <div class="form-group">
                    <label for="exampleInputFile" class="input__label">Kategori Resmini Seç </label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-control" name="Resimk" id="exampleInputFile" value="" />
                            <label class="" for="exampleInputFile"></label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-style mt-4">Kaydet</button>

            }
        </div>
    </div>

