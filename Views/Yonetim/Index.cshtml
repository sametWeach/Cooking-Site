
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">

        <div class="col-md-3">

            <div class="card card-primary card-outline ">
                <div class="card-body box-profile">
                    <div class="text-center">
                       
                    </div>

                    <h3 class="profile-username text-center">@ViewBag.profil.YoneticiAd </h3>

                  



                </div>

                <!-- /.card-body -->
            </div>

        </div>

        
        <div class="card card-primary col-9 col-md-9">
            <div class="card-header" style="background-color:white;">
                <h3 class="card-title">Profilini Düzenle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("Index", "Yonetim", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group mt-2">
                    <label for="exampleInputEmail1" class="input__label">Ad</label>
                    <input type="text" class="form-control input-style" name="YoneticiAd" id="exampleInputEmail1" aria-describedby="emailHelp" value="@ViewBag.profil.YoneticiAd">
                    <small id="emailHelp" class="form-text text-muted">
                    </small>
                </div>
               
              
               
                <div class="form-group">
                    <label for="exampleInputEmail1" class="input__label">Şifre</label>
                    <input type="password" class="form-control input-style" name="YoneticiSifre" id="exampleInputEmail1" aria-describedby="emailHelp" value="@ViewBag.profil.YoneticiSifre">
                    <small id="emailHelp" class="form-text text-muted">
                    </small>
                </div>
             
                <hr />
              
              
                <button type="submit" class="btn btn-primary btn-style mt-1 mb-2" >Kaydet</button>

            }
        </div>

       



    </div>
</div>
  

 



