@model List<Kategori>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <div class="col-lg-12 mb-4">
        <div class="card card_border">
            <div class="card-header chart-grid__header" style="font-size:24px;">
                Kategoriler
            </div>

            
            <div class="card-header chart-grid__header">

                Kategori Ekle  &emsp;
                <i class="fa fa-angle-double-right"></i>
                &emsp;
                <a class="btn btn-success" style="text-align:right;" href="/Yonetim/KategoriEkle">
                    <i class="fa fa-plus-square"></i>
                </a>

                @using (Html.BeginForm("Kategoriler", "Yonetim", FormMethod.Get))
                {
                    <p class="text-right">
                        Kategori Adı: @Html.TextBox("p")
                        <input type="submit" value="KategoriAra" />
                    </p>

                }
            </div>




            <div class="card-body">
                <div class="accordion" id="accordionExample">

                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr class="text-center">
                                @*<th scope="col">#</th>*@
                                <th scope="col">Resim</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kt in Model)
                            {
                            <tr class="text-center">
                                @*<th scope="row">@kt.KategoriID </th>*@
                                <td> <img class="profile-user-img img-fluid img-circle" style="border-radius:20%;" src="@kt.Resim.Kucukresimyol" alt="KategorilerResim"></td>
                                <td>@kt.KategoriAd</td>
                                <td>
                                    <a class="btn btn-info" href="/Yonetim/KategoriGuncelle/@kt.KategoriID">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="/Yonetim/KategoriSil/@kt.KategoriID">
                                        @*onclick="return confirm('Silmek istediğinizden emin misiniz ?')"*@
                                        <i class="fa fa-trash"></i>

                                    </a>
                                </td>
                            </tr>
                                }



                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>

