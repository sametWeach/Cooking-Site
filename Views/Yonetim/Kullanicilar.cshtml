@model List<Kullanici>
@{
    ViewBag.Title = "Kullanicilar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mb-4">
    <div class="card card_border">
        <div class="card-header chart-grid__header" style="font-size:24px;">
            Kullanıcılar
        </div>


        <div class="card-header chart-grid__header">

            Kullanıcı Ekle  &emsp;
            <i class="fa fa-angle-double-right"></i>
            &emsp;
            <a class="btn btn-success" style="text-align:right;" href="/Yonetim/KullaniciEkle">
                <i class="fa fa-plus-square"></i>
            </a>
            @using (Html.BeginForm("Kullanicilar", "Yonetim", FormMethod.Get))
            {
                <p class="text-right">
                    Kullanıcı Adı: @Html.TextBox("p")
                    <input type="submit" value="KullaniciAra" />
                </p>

            }
        </div>




        <div class="card-body">
            <div class="accordion" id="accordionExample">

                <table class="table table-hover table-bordered">
                    <thead>
                        <tr class="text-center">
                            @*<th scope="col">#</th>*@
                            <th scope="col">Ad</th>
                            <th scope="col">Soyad</th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">Güncelle</th>
                            <th scope="col">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kl in Model)
                        {
                        <tr class="text-center">
                            @*<th scope="row">@kt.KategoriID </th>*@
                            <td>@kl.Ad</td>
                            <td>@kl.Soyad</td>
                            <td>@kl.KullaniciAdi</td>
                            <td>
                                <a class="btn btn-info" href="/Yonetim/KullaniciGuncelle/@kl.KullaniciID">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="/Yonetim/KullaniciSil/@kl.KullaniciID">
                                    @*onclick="return confirm('Silmek istediğinizden emin misiniz ?')"*@
                                    <i class="fa fa-trash"></i>

                                </a>
                            </td>
                        </tr>
                        }



                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>

