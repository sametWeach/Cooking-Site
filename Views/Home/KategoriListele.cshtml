
@{
    ViewBag.Title = "KategoriListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Kategori>

<div class="container">
    <div class="row mt-5">

        @foreach (var kat in Model)
        {

            <div class="col-lg-3 col-sm-6">
                <div class="recipe-item">
                    <a href="/Home/KategoriTarifListele/@kat.KategoriID"><img src="@kat.Resim.Ortaresimyol" alt=""></a>
                    <div class="ri-text">
                        @*<div class="cat-name">Etiketler</div>*@
                        <a href="/Home/KategoriTarifListele/@kat.KategoriID">
                            <h4>@kat.KategoriAd</h4>
                        </a>
                        <p>

                        </p>
                    </div>
                </div>
            </div>

        }





    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="recipe-pagination">
                <a href="#" class="active">01</a>
                <a href="#">02</a>
                <a href="#">03</a>
                <a href="#">04</a>
                <a href="#">İleri</a>
            </div>
        </div>
    </div>
</div>


