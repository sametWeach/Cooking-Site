
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Kategori>

    <div class="container">
        <div class="row">

            @foreach (var kat in Model)
            {

                <div class="col-lg-4 col-sm-6">
                    <div class="recipe-item">
